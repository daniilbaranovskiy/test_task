<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        <style>
            body {
                margin: 0;
                padding: 0;
                display: grid;
                grid-template-rows: auto 1fr auto;
                min-height: 100vh;
                font: 18px/1.5 sans-serif;
            }

            .header {
                text-align: center;
                padding: 20px;
                background: #f5f5f5;
            }

            .header h1 {
                font-size: 24px;
            }

            .header a {
                text-decoration: none;
                margin: 10px;
                color: black;
            }

            .header .user-actions {
                display: inline-block;
            }

            .content {
                padding: 20px;
            }

            .footer {
                text-align: center;
                padding: 10px;
                background: #f5f5f5;
            }
        </style>
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>
<body>
<div class="header">
    <h1>
        <a href="/">Home page</a> | <a href="/product">Products</a> |
        <a href="/cart">Cart</a> |
        <span class="user-actions">
            {% if app.user is not null %}
                <a href="{{ path('app_user_show', {'id': app.user.id}) }}">Account</a> |
                <a href="{{ path('app_logout') }}">Log Out</a>
            {% else %}
                <a href="/login">Sign In</a> | <a href="/register">Sign Up</a>
            {% endif %}
        </span>
    </h1>
</div>

<div class="content">
    {% block body %}
    {% endblock %}
</div>

<div class="footer">
    &copy; {{ app.user ? app.user.lastName ~ ' ' ~ app.user.firstName : 'Your Name' }}
</div>

</body>
</html>
