{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div style="text-align: center; max-width: 300px; margin: 0 auto">
        <h1>Register</h1>
        {{ form_errors(registrationForm) }}
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, { 'attr': {'style': 'width: 100%; margin-bottom: 10px'} }) }}
        {{ form_row(registrationForm.plainPassword, { 'label': 'Password', 'attr': {'style': 'width: 100%; margin-bottom: 10px'} }) }}
        {{ form_row(registrationForm.lastName, { 'attr': {'style': 'width: 100%; margin-bottom: 10px'} }) }}
        {{ form_row(registrationForm.firstName, { 'attr': {'style': 'width: 100%; margin-bottom: 10px'} }) }}
        {{ form_row(registrationForm.address, { 'attr': {'style': 'width: 100%; margin-bottom: 10px'} }) }}
        {{ form_row(registrationForm.agreeTerms, { 'attr': {'style': 'margin-bottom: 10px'} }) }}
        <button type="submit" style="width: 80px;" class="btn">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
